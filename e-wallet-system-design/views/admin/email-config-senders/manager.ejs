<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Email config</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active">Email config</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="control-group" style="padding-bottom: 10px;">
                            <a type="button" href="/admin/email-config-senders/create" class="btn btn-success"
                               id="create">Create
                            </a>
                        </div>
                        <table id="datatable" class="table table-bordered  nowrap">
                            <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Provider</th>
                                <th scope="col">is_block</th>
                                <th scope="col">usage</th>
                                <th scope="col">Host</th>
                                <th scope="col">User</th>
                                <th scope="col" class="text-center">Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% for (var i = 0, len = data.length ; i < len; i++) { %>
                                <tr>
                                    <th scope="row"><%= i + 1 %></th>
                                    <th><%= data[i].provider %></th>
                                    <th><%= data[i].is_block %></th>
                                    <th><%= data[i].usage %></th>
                                    <th><%= data[i].host %></th>
                                    <th><%= data[i].user %></th>
                                    <td class="text-center " style="width: 300px;">
                                        <button type="button" class="btn btn-warning"
                                                onclick="del('<%= data[i].id %>')">Delete
                                        </button>
                                    </td>
                                </tr>
                            <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- end col -->
        </div>
    </div>
</section>
<script src="/assets/js/live/email-config-senders/action.js"></script>
